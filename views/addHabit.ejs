<html>
  <head>
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      body {
        margin: 0;
        padding: 0;
        background-color: rgb(14, 7, 36);
        color: white;
      }
      #addhabit {
        margin: 5% 30%;
        width: 40%;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/_navbar.ejs') %>
    <div id="addHabit">
      <h1 style="text-align: center; margin-bottom: 5%">Add Habit</h1>
      <form action="/create/habit" method="post" id="new-habit-form">
        <div class="mb-3">
          <label for="name" class="form-label">Habit: </label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Enter a habit"
          />
        </div>
        <div class="mb-3">
          <label for="unit" class="form-label">Measurement Unit: </label>
          <input
            type="text"
            class="form-control"
            id="unit"
            name="unit"
            placeholder="km/laps/hours/min/sec"
          />
        </div>
        <div class="mb-3">
          <label for="unit_value" class="form-label"
            >Measurement Quantity:</label
          >
          <input
            type="number"
            class="form-control"
            id="unit_value"
            name="unit_value"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
